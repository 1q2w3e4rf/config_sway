{
    // –û—Å–Ω–æ–≤–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 8,
    "margin-top": 6,
    "margin-bottom": 0,
    "margin-left": 12,
    "margin-right": 12,
    
    // –ú–æ–¥—É–ª–∏
    "modules-left": ["custom/launcher", "sway/workspaces"],
    "modules-center": ["sway/window"],
    "modules-right": [
        "custom/vpn",
        "custom/language",
        "network",
        "custom/media",
        "custom/weather",
        "cpu",
        "memory",
        "pulseaudio",
        "custom/notification",
        "clock",
        "custom/power"
    ],

    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–∞–±–æ—á–∏—Ö –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "Ôú∏",
            "2": "Ôâ©",
            "3": "ÔÑ°",
            "4": "ÔÄÅ",
            "5": "ÔÄæ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        },
        "persistent_workspaces": {
            "*": 5
        }
    },
    // VPN
    "custom/vpn": {
        "exec": "if systemctl is-active --quiet wg-quick@wg0; then echo '{\"text\":\"VPN\", \"tooltip\":\"VPN –∞–∫—Ç–∏–≤–µ–Ω\", \"class\":\"active\"}'; else echo '{\"text\":\"VPN\", \"tooltip\":\"VPN –≤—ã–∫–ª—é—á–µ–Ω\", \"class\":\"inactive\"}'; fi",
        "exec-if": "which wg-quick",
        "return-type": "json",
        "interval": 5,
        "format": "üåç",
        "on-click": "if systemctl is-active --quiet wg-quick@wg0; then sudo systemctl stop wg-quick@wg0; else sudo systemctl start wg-quick@wg0; fi",
        "on-click-right": "alacritty -e sudo wg show"
    },
    // –ú–æ–¥—É–ª—å —Å–µ—Ç–∏
    "network": {
        "format": "üåê",
        "format-ethernet": "üîå {bandwidthDownBits}",
        "format-wifi": "üì∂ {bandwidthDownBits}",
        "format-disconnected": "‚ö†Ô∏è Offline",
        "tooltip": false,
        "interval": 3,
        "on-click": "nmtui-connect"
    },
    // –û—Å—Ç–∞–ª—å–Ω—ã–µ –º–æ–¥—É–ª–∏...
    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "tooltip": true
    },

    "custom/launcher": {
        "format": "üóΩ",
        "on-click": "rofi -show drun -config ~/.config/rofi/config.rasi",
        "on-click-right": "rofi -show run -config ~/.config/rofi/config.rasi",
        "tooltip": false
    },

    "custom/language": {
        "exec": "/etc/xdg/waybar/language.py",
        "return-type": "json",
        "interval": 1,
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
        "on-click-right": "swaymsg input type:keyboard xkb_switch_layout prev"
    },

    "custom/weather": {
        "exec": "curl -s 'wttr.in/Vyazniki?format=%c+%t+%w' | sed 's/+//g'",
        "interval": 3600,
        "format": "üå¶Ô∏è",
        "tooltip-format": "–ü–æ–≥–æ–¥–∞ –≤ –í—è–∑–Ω–∏–∫–∞—Ö:\n{}\n\n–ù–∞–∂–º–∏—Ç–µ –¥–ª—è –ø–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–µ–π",
        "exec-on-event": "curl -s 'wttr.in/Vyazniki?format=%c+%t+%w\\n%D\\n%h\\n%p'",
        "on-click": "xdg-open 'https://wttr.in/Vyazniki'"
    },

    "custom/media": {
        "exec": "/etc/xdg/waybar/mediaplayer.py",
        "return-type": "json",
        "format": "{icon}  {}",
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "ÔÄÅ"
        },
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "escape": true
    },

    "clock": {
        "interval": 1,
        "format": "ÔÄó <span>{:%H:%M}</span>",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "gnome-calendar",
        "timezone": "Europe/Moscow"
    },

    "custom/notification": {
        "exec": "/etc/xdg/waybar/notification.py",
        "return-type": "json",
        "interval": 1,
        "format": "{icon} {}",
        "format-icons": {
            "notification": "ÔÉ≥",
            "none": "ÔÇ¢",
            "dnd": "Ôá∑"
        },
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw"
    },

    "custom/power": {
        "format": "<span color='#f38ba8'>ÔÄë </span>",
        "on-click": "wlogout --protocol layer-shell",
        "tooltip": false
    },

    "cpu": {
        "interval": 5,
        "format": "Ôãõ  {usage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty htop"
    },

    "memory": {
        "interval": 5,
        "format": "Ôî∏  {percentage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G",
        "on-click": "kitty htop"
    },

    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "Ôäî {icon}  {volume}%",
        "format-muted": "Ôë¶  Muted",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôüè",
            "headset": "Ôüç",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 8
    }
}
