{
    // –û—Å–Ω–æ–≤–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 8,
    "margin-top": 6,
    "margin-bottom": 0,
    "margin-left": 12,
    "margin-right": 12,
    
    // –ú–æ–¥—É–ª–∏
    "modules-left": ["custom/launcher", "sway/workspaces"],
    "modules-center": ["sway/window"],
    "modules-right": [
        "custom/language",
	"network",
        "custom/media",
        "custom/weather",
        "cpu",
        "memory",
        "pulseaudio",
        "custom/notification",
        "clock",
        "custom/power"
    ],

    // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–∞–±–æ—á–∏—Ö –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "Ôú∏",  // –î–æ–º
            "2": "Ôâ©",  // –ë—Ä–∞—É–∑–µ—Ä
            "3": "ÔÑ°",  // –ö–æ–¥
            "4": "ÔÄÅ",  // –ú—É–∑—ã–∫–∞
            "5": "ÔÄæ",  // –ì—Ä–∞—Ñ–∏–∫–∞
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        },
        "persistent_workspaces": {
            "*": 5
        }
    },
    
    "network": {
        "format": "üåê",
        "format-ethernet": "üîå {bandwidthDownBits}",
        "format-wifi": "üì∂ {bandwidthDownBits}",
        "format-disconnected": "‚ö†Ô∏è Offline",
        "tooltip": true,
        "tooltip-format": "‚ñ∏ {ifname}\n‚ñ∏ IP: {ipaddr}\n‚ñ∏ Down: {bandwidthDownBits}/s\n‚ñ∏ Up: {bandwidthUpBits}/s\n‚ñ∏ MAC: {macaddr}",
        "interval": 3,
        "exec": "NET_DEV=$(ip route get 8.8.8.8 2>/dev/null | awk '{print $5}'); [ -z \"$NET_DEV\" ] && NET_DEV=$(ip link show | awk -F': ' '/state UP/ {print $2; exit}'); SPEED=$(ip -json link show dev $NET_DEV 2>/dev/null | jq -r '.[0].speed'); echo \"{\\\"ifname\\\":\\\"$NET_DEV\\\",\\\"ipaddr\\\":\\\"$(ip -json addr show dev $NET_DEV 2>/dev/null | jq -r '.[0].addr_info[] | select(.family == \"inet\") | .local')\\\",\\\"bandwidthDownBits\\\":\\\"$(($SPEED*1000000))bps\\\",\\\"bandwidthUpBits\\\":\\\"$(($SPEED*1000000))bps\\\",\\\"macaddr\\\":\\\"$(ip -json link show dev $NET_DEV | jq -r '.[0].address')\\\"}\"",
        "return-type": "json",
        "on-click": "nmtui-connect",
        "on-click-right": "alacritty -e bmon"
    },

    // –ê–∫—Ç–∏–≤–Ω–æ–µ –æ–∫–Ω–æ
    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "tooltip": true
    },

    // –ö–Ω–æ–ø–∫–∞ –∑–∞–ø—É—Å–∫–∞
    "custom/launcher": {
        "format": "Ôåì",
        "on-click": "rofi -show drun -theme slate",
        "on-click-right": "rofi -show run -theme slate",
        "tooltip": false
    },

    // –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä —è–∑—ã–∫–∞
    "custom/language": {
        "exec": "/etc/xdg/waybar/language.py",
        "return-type": "json",
        "interval": 1,
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
        "on-click-right": "swaymsg input type:keyboard xkb_switch_layout prev"
    },

    // –ú–æ–¥—É–ª—å –ø–æ–≥–æ–¥—ã
    "custom/weather": {
        "exec": "curl -s 'wttr.in/Vyazniki?format=%c+%t+%w' | sed 's/+//g'",
        "interval": 3600,
        "format": "üå¶Ô∏è",
        "tooltip-format": "–ü–æ–≥–æ–¥–∞ –≤ –í—è–∑–Ω–∏–∫–∞—Ö:\n{}\n\n–ù–∞–∂–º–∏—Ç–µ –¥–ª—è –ø–æ–¥—Ä–æ–±–Ω–æ—Å—Ç–µ–π",
        "exec-on-event": "curl -s 'wttr.in/Vyazniki?format=%c+%t+%w\\n%D\\n%h\\n%p'",
        "on-click": "xdg-open 'https://wttr.in/Vyazniki'"
    },

    // –ú–µ–¥–∏–∞–ø–ª–µ–µ—Ä
    "custom/media": {
        "exec": "/etc/xdg/waybar/mediaplayer.py",
        "return-type": "json",
        "format": "{icon}  {}",
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "ÔÄÅ"
        },
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "escape": true
    },

    // –ß–∞—Å—ã
    "clock": {
        "interval": 1,
        "format": "ÔÄó <span>{:%H:%M}</span>",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "gnome-calendar",
        "timezone": "Europe/Moscow"
    },

    // –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
    "custom/notification": {
        "exec": "/etc/xdg/waybar/notification.py",
        "return-type": "json",
        "interval": 1,
        "format": "{icon} {}",
        "format-icons": {
            "notification": "ÔÉ≥",
            "none": "ÔÇ¢",
            "dnd": "Ôá∑"
        },
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw"
    },

    // –ö–Ω–æ–ø–∫–∞ –ø–∏—Ç–∞–Ω–∏—è
    "custom/power": {
        "format": "<span color='#f38ba8'>ÔÄë </span>",
        "on-click": "wlogout --protocol layer-shell",
        "tooltip": false
    },

    // CPU
    "cpu": {
        "interval": 5,
        "format": "Ôãõ  {usage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty htop"
    },

    // –ü–∞–º—è—Ç—å
    "memory": {
        "interval": 5,
        "format": "Ôî∏  {percentage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G",
        "on-click": "kitty htop"
    },

    // –ê—É–¥–∏–æ
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "Ôäî {icon}  {volume}%",
        "format-muted": "Ôë¶  Muted",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôüè",
            "headset": "Ôüç",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    "tray": {
        "icon-size": 18,
        "spacing": 8
    }
}
